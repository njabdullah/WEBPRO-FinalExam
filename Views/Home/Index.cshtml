@model MovieStoreMvc.Models.DTO.MovieListVm
@{
    Layout = "_Layout";
}
<section class="search-bar">
    <form method="get" asp-action="Index">
        <input type="text" name="term" placeholder="search here">
        <button type="submit"><i class="fa fa-search"></i></button>
        <a style="background-color: #607274; color:white; border-radius: 10px; padding: 10px 15px; margin:0 10px" type="submit href="/Home/Index">All</a>
    </form>
</section>
<section class="movies">
    @foreach(var movie in Model.MovieList){
        <div style="background-color: #B2A59B; border-radius:10px; box-shadow: 4px 4px black" class="movie-card" onclick="window.location.href='/Home/MovieDetail?movieId=@movie.Id'">
        <div class="movie-image">
            <img src="/Uploads/@movie.MovieImage">
        </div>
        <div class="movie-info">
            <h4 style="color: white;">@movie.Title</h4>
                <h4 style="color: white;">@movie.GenreNames</h4>
                <h4 style="color:white;">@movie.ReleaseYear</h4>
           @* <h4>Cast : @movie.Cast</h4>
            <h4>Director : @movie.Director</h4>*@
        </div>
    </div>
    }
</section>

<div class="pagination">
    @for(int i=1;i<=Model.TotalPages;i++){
        if(i==Model.CurrentPage){
            <a href="/Home/Index?currentPage=@i&term=@Model.Term" class="active">@i</a>
        }
        else{
            <a href="/Home/Index?currentPage=@i&term=@Model.Term">@i</a>

        }
    }
   
</div>